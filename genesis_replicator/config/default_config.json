{
    "foundation_services": {
        "event_system": {
            "max_retry_attempts": 3,
            "retry_delay": 1000,
            "queue_size": 1000
        },
        "blockchain_integration": {
            "default_chain": "ethereum",
            "sync_interval": 15,
            "max_block_range": 1000
        }
    },
    "scalability": {
        "cluster": {
            "heartbeat_interval": 10,
            "node_timeout": 30,
            "min_nodes": 1,
            "max_nodes": 10
        },
        "load_balancer": {
            "update_interval": 5,
            "load_threshold": 0.8
        },
        "state_manager": {
            "sync_interval": 5,
            "consistency_check_interval": 30
        },
        "resource_optimizer": {
            "cpu_high_threshold": 80.0,
            "cpu_low_threshold": 20.0,
            "memory_high_threshold": 85.0,
            "memory_low_threshold": 30.0,
            "optimization_interval": 60
        }
    },
    "agent_core": {
        "max_agents": 100,
        "memory_limit": 1024,
        "resource_check_interval": 60
    },
    "decision_engine": {
        "strategy_update_interval": 300,
        "rule_evaluation_timeout": 5000,
        "history_retention_days": 30
    },
    "application_layer": {
        "api_gateway": {
            "host": "0.0.0.0",
            "port": 8000,
            "rate_limit": 100
        },
        "admin_interface": {
            "host": "0.0.0.0",
            "port": 8001
        }
    },
    "logging": {
        "level": "INFO",
        "file": "genesis_replicator.log",
        "max_size": 10485760,
        "backup_count": 5
    }
}
